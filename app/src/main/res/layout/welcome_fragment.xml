<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anh_nen">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="29dp"
        android:gravity="end"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="7"
        tools:ignore="MissingConstraints">
        <Button
            android:layout_gravity="end"
            android:layout_weight="1"
            android:id="@+id/textColor"
            android:layout_height="40dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/sofia_pro_medium"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:text="skip"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FE724C"
            android:textFontWeight="14"
            android:textSize="14sp"
            app:cornerRadius="32dp"
            tools:ignore="MissingConstraints,RtlCompat"
            android:layout_width="0dp">

        </Button>
    </LinearLayout>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="170dp"
        tools:ignore="MissingConstraints,RtlSymmetry"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="5dp"
        android:paddingLeft="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sofia_pro"
            android:text="Welcome to"
            android:textColor="#111719"
            android:textSize="53sp"
            tools:ignore="HardcodedText">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sofia_pro"
            android:text="Food Hub"
            android:textColor="#FE724C"
            android:textSize="45sp"
            tools:ignore="HardcodedText">

        </TextView>

        <TextView
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sofia_pro"
            android:text="Your favourite foods delivered fast at your door"
            android:textAlignment="textStart"
            android:textColor="#30384F"
            android:textSize="18sp"
            tools:ignore="HardcodedText"
            android:gravity="start">

        </TextView>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="44dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#80FFFFFF">

            </View>

            <TextView
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/sofia_pro_regular"
                android:text="sign in with"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:ignore="HardcodedText">

            </TextView>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#80FFFFFF">
            </View>
        </LinearLayout>


        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="44dp"
            android:background="@drawable/border"
            android:fontFamily="@font/sofia_pro"

            android:text="Start with email or phone"
            android:textAllCaps="false"
            android:textSize="17sp"
            app:backgroundTint="@null"
            app:cornerRadius="32dp"
            tools:ignore="HardcodedText">

        </Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_margin="10dp"
                android:background="@drawable/stroke_button_shape"
                android:backgroundTint="#FFFFFF"
                android:drawableLeft="@drawable/facebook_icon"
                android:fontFamily="@font/sofia_pro_medium"
                android:text="FACEBOOK"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF" />

            <Button
                android:layout_width="168dp"
                android:layout_height="57dp"
                android:layout_margin="10dp"
                android:background="@drawable/stroke_button_shape"
                android:backgroundTint="#FFFFFF"
                android:drawableLeft="@drawable/google_icon"
                android:fontFamily="@font/sofia_pro_medium"
                android:text="GOOGLE"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF" />
        </LinearLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sofia_pro_regular"
                android:text="Already have an account? "
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                tools:ignore="HardcodedText">

            </TextView>

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/dangnhap1"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:fontFamily="@font/sofia_pro_regular"
                android:paddingHorizontal="0dp"
                android:paddingVertical="0dp"
                android:text="@string/sign_in"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="14sp">

            </Button>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>